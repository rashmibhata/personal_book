<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:backgroundTint="#FFFFFF"
    android:outlineSpotShadowColor="#000000"
    android:outlineAmbientShadowColor="#000000"
    android:elevation="30dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/card_view">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="JAN"
            android:textAlignment="center"
            android:background="@color/olive"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18dp"
            android:id="@+id/diary_month" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="20"
            android:textAlignment="center"
            android:background="@color/olivelight"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="26dp"
            android:layout_below="@id/diary_month"
            android:id="@+id/diary_day"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="2020"
            android:textAlignment="center"
            android:background="@color/olivelight"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_below="@id/diary_day"
            android:id="@+id/diary_year"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/diary_day"
            android:textSize="20dp"
            android:maxLines="1"
            android:textFontWeight="@android:integer/config_mediumAnimTime"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="2dp"
            android:textStyle="bold"
            android:textColor="@color/olive"
            android:id="@+id/diary_title"
            android:text="Akshat Jain is great"
            />

        <TextView
            android:id="@+id/diary_description"
            android:textColor="@color/olivelight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/diary_title"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/diary_day"
            android:maxLines="2"
            android:text="Akshat Jain is great and he is mahaan and mahaan"
            android:textSize="16dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>